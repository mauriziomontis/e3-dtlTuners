# Control Records for Tuner System
# set of records required to control DTL tuner system in different configuartions [man|auto]
#
# developed by Maurizio Montis | INFN-LNL


record(bo, "DTL:MC-MCU:AutoCmd") {
	field(DESC, "Tuner System automatic control ")
	field(OMSL, "supervisory")
	field(PINI, "YES")
	field(VAL, 0)
	field(ZNAM, "MANUAL")
	field(ONAM, "AUTO")
}

record(bo, "DTL:MC-MCU:AutoCmd-RB") {
	field(DESC, "Tuner System automatic control readback")
	field(PINI, "YES")
	field(VAL, 0)
	field(ZNAM, "MANUAL")
	field(ONAM, "AUTO")
}

record(bo, "DTL:MC-MCU:OpRun") {
	field(DESC, "Tuner Sys start operations")
	field(PINI, "YES")
	field(VAL, 0)
	field(ZNAM, "NOT START")
	field(ONAM, "START")
}

record(bo, "DTL:MC-MCU:OpStop") {
	field(DESC, "Tuner Sys stop operations")
	field(PINI, "YES")
	field(VAL, 0)
	field(ZNAM, "NOT STOP")
	field(ONAM, "STOP")
}
